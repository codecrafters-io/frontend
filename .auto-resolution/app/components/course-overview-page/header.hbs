<div class="flex items-center justify-between" ...attributes data-test-course-overview-header>
  <div>
    <h1
      class="text-gradient-to-b from-gray-950 to-gray-700 dark:from-white dark:to-gray-300 leading-10 md:leading-14 text-3xl md:text-5xl font-bold tracking-tighter mb-1 pr-2"
    >
      {{@course.name}}
    </h1>

    <p class="text-gray-600 dark:text-gray-400 mb-6">
      {{@course.shortDescription}}
    </p>

    {{#if @course.releaseStatusIsAlpha}}
      <div class="inline-flex text-sm lg:text-base rounded-lg px-3 py-2 text-teal-500 font-bold border border-teal-500">
        COMING SOON
      </div>
    {{else}}
      <div class="flex items-center flex-wrap-reverse gap-x-4 gap-y-4">
        {{#if (has-block "cta")}}
          {{yield to="cta"}}
        {{else}}
          <CourseOverviewPage::StartCourseButton @course={{@course}} @language={{@language}} />
        {{/if}}

        <div class="flex items-center flex-wrap gap-2 grow">
          {{#each this.orderedSupportedLanguages as |supportedLanguage|}}
            <div class="flex">
              <LanguageLogo @language={{supportedLanguage}} @variant="gray" class="h-6 dark:brightness-90" />
              <EmberTooltip @text={{supportedLanguage.name}} />
            </div>
          {{/each}}
        </div>
      </div>
    {{/if}}
  </div>
  <div class="w-40 ml-4 hidden md:block">
    <CourseLogo @course={{@course}} />
  </div>
</div>