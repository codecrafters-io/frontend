{{page-title @model.contest.name}}

<div class="dark:bg-gray-950">
  <div class="container mx-auto lg:max-w-(--breakpoint-lg) pt-6 md:pt-10 pb-10 md:pb-48 px-3 md:px-6">
    <ContestPage::Header @allContests={{@model.allContests}} @contest={{@model.contest}} class="mb-6" />
    <div class="flex flex-col-reverse gap-3 md:gap-6 items-start md:flex-row">
      <div class="grow shrink min-w-0 flex flex-col items-stretch gap-6">
        <ContestPage::LeaderboardCard
          @contest={{@model.contest}}
          @languages={{@model.languages}}
          @topEntries={{this.filteredTopLeaderboardEntries}}
          @surroundingEntries={{this.surroundingLeaderboardEntries}}
        />

        <ContestPage::HowItWorksCard @contest={{@model.contest}} />
      </div>

      <ContestPage::PrizeDetailsCard @allContests={{@model.allContests}} @contest={{@model.contest}} class="w-full md:w-64 xl:w-80 shrink-0" />
    </div>
  </div>
</div>