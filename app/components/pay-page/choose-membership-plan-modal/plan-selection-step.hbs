<div>
  <div class="flex flex-col gap-y-2">
    {{#each @pricingPlans as |plan|}}
      <PayPage::ChooseMembershipPlanModal::PlanCard
        @isSelected={{eq @selectedPlan.id plan.id}}
        @onClick={{fn @onPlanSelect plan}}
        @plan={{plan}}
        @promotionalDiscount={{if (eq plan.validityInMonths 12) @activeDiscountForYearlyPlan null}}
        @regionalDiscount={{@regionalDiscount}}
      />
    {{/each}}

    <PrimaryButton @size="large" {{on "click" @onChoosePlanButtonClick}} data-test-choose-plan-button>
      Choose
      {{@selectedPlan.title}}
      pass â†’
    </PrimaryButton>
  </div>

  <div class="flex justify-center mt-4">
    <div
      class="inline-block text-gray-500 dark:text-gray-400 text-sm border-b border-gray-300 dark:border-gray-700 cursor-pointer"
      data-test-close-modal-cta
      role="button"
      {{on "click" @onCloseModalCTAClick}}
    >
      {{@closeModalCTAText}}
    </div>
  </div>
</div>