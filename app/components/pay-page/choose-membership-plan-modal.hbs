<ModalBody @allowManualClose={{true}} @shouldHideCloseButton={{true}} @onClose={{@onClose}} class="w-full">
  <div class="mb-6">
    <div class="font-bold text-2xl text-gray-600 text-center text-balance">
      Invest in the membership that pays for itself many times over.
    </div>

    <p class="text-gray-700 text-sm text-center text-balance mt-2">
      CodeCrafters members routinely unlock promotions and 5-figure salary jumps.
    </p>
  </div>

  <AnimatedContainer>
    {{#animated-if (eq this.currentStep "plan-selection") use=this.transition duration=200}}
      <div>
        <div class="flex flex-col gap-y-2">
          {{#each this.pricingPlans as |plan|}}
            <PayPage::ChooseMembershipPlanModal::PlanCard
              @activeDiscountForYearlyPlan={{@activeDiscountForYearlyPlan}}
              @isSelected={{eq this.selectedPlanId plan.id}}
              @onPlanSelect={{this.handlePlanSelect}}
              @plan={{plan}}
              @regionalDiscount={{@regionalDiscount}}
            />
          {{/each}}

          <PrimaryButton @size="large" {{on "click" this.handleContinueButtonClick}} data-test-choose-plan-button>
            Choose
            {{this.selectedPlan.title}}
            →
          </PrimaryButton>
        </div>

        <div class="flex justify-center mt-4">
          <div class="inline-block text-gray-500 text-sm border-b border-gray-300 cursor-pointer" role="button" {{on "click" @onClose}}>
            Back to pricing page
          </div>
        </div>
      </div>
    {{else}}
      <div>
        <div class="relative">
          <PayPage::ChooseMembershipPlanModal::PlanCard
            @activeDiscountForYearlyPlan={{@activeDiscountForYearlyPlan}}
            @isSelected={{true}}
            @onPlanSelect={{this.handlePlanSelect}}
            @plan={{this.selectedPlan}}
            @regionalDiscount={{@regionalDiscount}}
          />

          <div class="absolute inset-0 bg-white/60 flex items-center justify-center opacity-100 transition-opacity duration-200">
            <TertiaryButton @size="small" {{on "click" this.handleBackButtonClick}}>
              Change plan
            </TertiaryButton>
          </div>
        </div>

        <PayPage::ChooseMembershipPlanModal::InvoiceDetailsSection
          @extraInvoiceDetailsRequested={{this.extraInvoiceDetailsRequested}}
          @onToggle={{this.handleExtraInvoiceDetailsToggle}}
        />

        <div class="flex justify-between items-center">
          <span class="text-gray-400 text-sm" role="button" {{on "click" this.handleBackButtonClick}}>
            ← Back
          </span>

          <PrimaryButton
            class="flex! items-center justify-center"
            @size="large"
            {{on "click" this.handleProceedToCheckoutClick}}
            data-test-proceed-to-checkout-button
          >
            Proceed to Checkout

            {{#if this.isCreatingCheckoutSession}}
              <svg class="animate-spin ml-2 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path
                  class="opacity-75"
                  fill="currentColor"
                  d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
                ></path>
              </svg>
            {{else}}
              →
            {{/if}}
          </PrimaryButton>
        </div>
      </div>
    {{/animated-if}}
  </AnimatedContainer>
</ModalBody>