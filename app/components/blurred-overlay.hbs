<div class="relative" ...attributes>
  {{yield to="content"}}

  {{#if @isBlurred}}
    {{! template-lint-disable no-invalid-interactive }}
    <div class="absolute inset-0 z-10 backdrop-blur-xs flex items-start justify-center {{@overlayClass}}" {{on "click" this.handleOverlayClick}}>
      {{yield to="overlay"}}
    </div>
  {{/if}}
</div>