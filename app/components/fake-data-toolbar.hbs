<div class="p-4 bg-gray-50 shadow max-w-sm absolute top-4 left-4" ...attributes>
  <div class="pb-3 text-sm font-bold underline text-gray-700">
    Fake Data
  </div>

  <div class="flex flex-col items-start">
    <button
      type="button"
      {{on "click" this.handleCreateSubmissionButtonClick}}
      class="text-xs bg-teal-500 text-white rounded p-2 mb-2 {{unless @repository.id 'opacity-50'}}"
    >
      Create Submission
    </button>

    {{#if @repository.lastSubmission.statusIsEvaluating}}
      <button type="button" {{on "click" this.handleFailTestsButtonClick}} class="text-xs bg-teal-500 text-white rounded p-2 mb-2">
        Fail Tests
      </button>

      <button type="button" {{on "click" this.handlePassTestsButtonClick}} class="text-xs bg-teal-500 text-white rounded p-2">
        Pass Tests
      </button>
    {{/if}}
  </div>
</div>