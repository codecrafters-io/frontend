<LinkTo
  class="block p-4 border border-gray-200 rounded-sm hover:bg-gray-50 group/question-card"
  @route="concept-admin.question"
  @model={{@question.slug}}
  data-test-question-card
>
  <div class="font-semibold text-gray-800 group-hover/question-card:text-teal-600 transition-all mb-2">
    {{@question.queryMarkdown}}
    <span class="opacity-0 group-hover/question-card:opacity-100">â†’</span>
  </div>

  <div class="prose dark:prose-invert prose-sm">
    <ul>
      {{#each @question.options as |option|}}
        <li>
          {{option.markdown}}
        </li>
      {{/each}}
    </ul>
  </div>
  <div class="text-xs text-gray-400 mt-3">
    Slug:&nbsp;<span data-test-question-slug>{{@question.slug}}</span>
  </div>
</LinkTo>