<div class="bg-white rounded shadow p-6" ...attributes>
  <div class="font-bold text-lg text-gray-700 mb-5 border-b inline-flex">
    Subscription
  </div>

  {{!
  <div class="text-gray-600 mb-4">
    Your subscription allows upto <span class="font-bold">5 members</span>.
  </div>
}}

  <div class="text-gray-600 mb-4 text-sm">
    To view invoices or amend your subscription, click on the button below.
  </div>

  <button
    type="button"
    class="bg-teal-600 active:bg-teal-700 px-3 py-2 text-white rounded shadow-sm font-bold flex items-center text-md"
    {{on "click" this.handleManageSubscriptionButtonClick}}
    data-test-manage-subscription-button
  >
    Manage Subscription

    {{#if this.isCreatingTeamBillingSession}}
      <svg class="animate-spin ml-3 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path
          class="opacity-75"
          fill="currentColor"
          d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
        ></path>
      </svg>
    {{/if}}
  </button>
</div>