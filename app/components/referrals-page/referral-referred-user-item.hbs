<div
  class="flex items-center flex-wrap gap-y-2 justify-between group p-2 pr-3 hover:bg-gray-50 border rounded mb-2"
  data-test-affiliate-referred-user-item
>
  <a
    href={{@activationAndGrant.activation.customer.codecraftersProfileUrl}}
    class="flex items-center hover:underline pr-3"
    target="_blank"
    rel="noopener noreferrer"
  >
    <AvatarImage
      @user={{@activationAndGrant.activation.customer}}
      class="w-8 h-8 border border-gray-300 rounded shadow-sm group-hover:shadow mr-2 transition-shadow rounded-md"
    />

    <div>
      <div class="text-gray-700 text-sm">
        <span class="font-semibold" data-test-username>{{@activationAndGrant.activation.customer.username}}</span>
      </div>
      <div class="text-gray-700 text-sm block lg:hidden">
        <span class="text-gray-400 text-xs">{{date-from-now @activationAndGrant.activation.createdAt}}</span>
      </div>
    </div>
  </a>
  <div class="flex items-center flex-wrap gap-y-2">
    <div class="flex flex-shrink-0">
      <span
        class="inline-flex border rounded-full px-2 text-xs font-semibold leading-5 text-gray-700 mr-2"
      >{{@activationAndGrant.grant.shortActivatesAt}} - {{@activationAndGrant.grant.shortExpiresAt}}</span>
      <EmberTooltip
        @text="This referral grants you free access from {{@activationAndGrant.grant.fullActivatesAt}} to {{@activationAndGrant.grant.fullExpiresAt}}"
      />
    </div>

    <span class="text-gray-400 text-xs hidden lg:block">{{date-from-now @activationAndGrant.activation.createdAt}}</span>
  </div>
</div>