{{! @glint-nocheck: not typesafe yet }}
<a
  href={{@contributorDetails.profileUrl}}
  class="inline-flex gap-x-2 items-center px-4 py-3 border border-gray-200 rounded hover:bg-gray-50 max-w-sm"
  target="_blank"
  rel="noopener noreferrer"
  ...attributes
>
  <img
    alt="avatar"
    src={{@contributorDetails.avatarUrl}}
    class="w-12 h-12 filter drop-shadow-xs ring-1 ring-white rounded-full shadow-sm brightness-110"
  />
  <div>
    <div class="text-gray-700 text-xs font-bold mb-0.5">
      {{@contributorDetails.name}}
    </div>
    <div class="text-gray-500 text-xs">
      {{@contributorDetails.headline}}
    </div>
  </div>
</a>