<div class="bg-white rounded-md shadow-sm border border-gray-200 relative w-full" data-test-track-page-card ...attributes>
  <div class="p-4 md:p-6">
    <div class="flex items-start justify-between">
      <div class="flex items-center flex-wrap">
        <div
          class="text-lg md:text-xl font-semibold text-gray-700 mr-3 mb-4 flex items-center
            {{if @isNavigatingToOtherPage 'group-hover:text-teal-500 transition-colors'}}"
          data-test-track-page-card-title
        >
          {{@title}}

          {{#if @isNavigatingToOtherPage}}
            {{svg-jar "arrow-right" class="w-4 ml-2 fill-current"}}
          {{/if}}
        </div>

        {{#if (gt @recentParticipants.length 0)}}
          <div class="flex -space-x-3 hover:space-x-1 items-center mb-4">
            {{#each @recentParticipants as |user|}}
              <TrackPage::Header::TopParticipantAvatar @user={{user}} />
            {{/each}}
          </div>
        {{/if}}
      </div>
      <div class="font-bold pl-4 text-gray-300 text-lg md:text-xl group-hover:text-gray-400 transition-colors mb-4">
        {{#if @isComplete}}
          {{svg-jar "check-circle" class="w-8 h-8 fill-current text-teal-500"}}
        {{else if @number}}
          #{{@number}}
        {{/if}}
      </div>
    </div>

    {{yield}}
  </div>
</div>