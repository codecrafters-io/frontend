<div>
  {{#each @course.sortedBaseStages as |stage|}}
    <TrackPage::CourseCard::StageListItem @stage={{stage}} @isComplete={{includes stage @completedStages}} />
  {{/each}}

  {{#each @course.sortedExtensions as |courseExtension|}}
    <h3 class="font-semibold text-gray-600 dark:text-gray-400 text-center text-sm relative mt-3 mb-3">
      <span class="block h-px w-full bg-gray-200 dark:bg-white/5 absolute top-50-percent -mt-px"></span>
      <span class="relative px-6 bg-white dark:bg-gray-850">{{courseExtension.name}}</span>
    </h3>

    {{#each courseExtension.sortedStages as |stage|}}
      <TrackPage::CourseCard::StageListItem @stage={{stage}} @isComplete={{includes stage @completedStages}} />
    {{/each}}
  {{/each}}
</div>