<LinkTo
  @route="course.stage.instructions"
  @models={{array @stage.course.slug @stage.slug}}
  class="block hover:bg-gray-50 dark:hover:bg-gray-700/50 py-1.5 -mx-1.5 px-1.5 rounded-sm"
  data-test-stage-list-item
  ...attributes
>
  <div class="flex items-center justify-between">
    <div class="flex items-center">
      <div class="w-2 h-2 {{if @isComplete 'bg-teal-500' 'bg-gray-200 dark:bg-gray-700'}} rounded-full mr-2"></div>

      {{! TODO: Qualify all heroicons with solid/outline }}
      {{svg-jar "terminal-outline" class="w-6 mr-2 text-gray-400 dark:text-gray-600"}}

      <div class="prose dark:prose-invert prose-sm">
        {{@stage.name}}
      </div>
    </div>

    {{#if @isComplete}}
      <div data-test-stage-complete-checkmark>
        {{svg-jar "check" class="ml-1 w-5 text-teal-500"}}
      </div>
    {{else}}
      <div class="pl-4 hidden sm:flex shrink-0">
        <CourseStageDifficultyLabel @stage={{@stage}} />
      </div>
    {{/if}}
  </div>

  {{#if this.authenticator.isAnonymous}}
    <EmberTooltip @text="Login via GitHub to view this stage" />
  {{/if}}
</LinkTo>