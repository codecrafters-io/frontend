<div
  class="flex items-center px-3 py-3 rounded-full border
    {{if
      @isSelected
      'bg-white dark:bg-gray-900 border-teal-500'
      'border-gray-300 dark:border-gray-700 bg-gray-100 dark:bg-gray-850 hover:border-gray-400 hover:bg-white dark:hover:bg-gray-900'
    }}"
  role="button"
  data-test-course-pill
  ...attributes
>
  <CourseLogo @course={{@course}} class="h-4 mr-2 shrink-0" />
  <div class="text-sm text-gray-700 dark:text-gray-200 shrink-0">{{@course.name}}</div>
</div>