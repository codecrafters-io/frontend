<div ...attributes>
  <img alt="avatar" src={{@user.avatarUrl}} class="border-2 border-white dark:border-gray-700 shadow-sm rounded-sm w-48 h-48 mb-6" />

  {{#if @user.hasAnonymousModeEnabled}}
    <h1 class="mb-4">
      <a
        class="group inline-flex items-center text-gray-400 dark:text-gray-500 w-full"
        href="https://github.com/ghost"
        target="_blank"
        rel="noopener noreferrer"
        data-test-github-profile-link
      >
        <div class="text-lg group-hover:underline truncate">
          {{@user.username}}
        </div>

        {{svg-jar "github" class="fill-current w-5 ml-2 group-hover:text-gray-500 dark:group-hover:text-gray-400"}}
      </a>
    </h1>
  {{else}}
    <h1 class="font-bold text-2xl text-gray-600 dark:text-gray-300" data-test-github-name>
      {{@user.githubName}}
    </h1>

    <a
      class="group inline-flex items-center text-gray-400 dark:text-gray-500 mb-4 w-full"
      href={{@user.githubProfileUrl}}
      target="_blank"
      rel="noopener noreferrer"
      data-test-github-profile-link
    >
      <div class="text-lg group-hover:underline truncate">
        {{@user.githubUsername}}
      </div>

      {{svg-jar "github" class="fill-current w-5 ml-2 group-hover:text-gray-500 dark:group-hover:text-gray-400"}}
    </a>
  {{/if}}

  {{#if (gt @user.completedCourseParticipations.length 0)}}
    <div class="mb-4 flex items-center space-x-1.5">
      {{#each @user.languagesFromCompletedCourseParticipations as |language|}}
        <LanguageLogo @language={{language}} @variant="teal" class="h-6" />
      {{/each}}
    </div>
  {{/if}}

  <div class="flex flex-col gap-4">
    <div class="text-xs text-gray-400">
      joined
      {{date-from-now @user.createdAt}}
    </div>

    <UserLabel @user={{@user}} class="self-start" />

    {{#if this.currentUser.isAdmin}}
      <TertiaryButton @size="extra-small" data-test-admin-profile-button class="w-fit">
        <a href={{@user.adminProfileUrl}} target="_blank" rel="noopener noreferrer">Admin Profile</a>
      </TertiaryButton>
    {{/if}}

    {{#if this.isCurrentUser}}
      <TertiaryLinkButton @route="settings.profile" class="w-fit" @size="small">
        Customize Profile
      </TertiaryLinkButton>
    {{/if}}
  </div>
</div>