<div ...attributes>
  {{#each-in this.profileEventGroups as |date profileEventsInGroup|}}
    <div class="flex items-center">
      <div class="uppercase text-gray-400 font-semibold">
        {{date}}
      </div>
      <div class="ml-2 h-px bg-gray-200 dark:bg-white/5 grow"></div>
    </div>

    <ul class="pt-4 pb-6">
      {{#each profileEventsInGroup as |profileEvent|}}
        <li class="ml-1.5 md:ml-3 py-1.5">
          <div class="flex items-start">
            <div class="h-7 flex items-center shrink-0">
              <div
                class="shrink-0 mr-3 h-2 w-2
                  {{if profileEvent.isCompletedCourseEvent 'bg-teal-500' 'bg-gray-300 dark:bg-gray-600'}}
                  rounded-sm shadow-xs"
              ></div>
            </div>

            <span class="prose dark:prose-invert">{{markdown-to-html profileEvent.descriptionMarkdown}}</span>
          </div>
        </li>
      {{/each}}
    </ul>
  {{/each-in}}
</div>