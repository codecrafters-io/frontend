<svg viewBox="0 0 24 24" class="w-full h-full transform -rotate-90">
  {{! Base circle (background) }}
  <circle
    cx="12"
    cy="12"
    r="9"
    fill="none"
    stroke-width="5"
    class="{{if (eq this.color 'grey') 'stroke-gray-100 dark:stroke-gray-900' 'stroke-teal-100 dark:stroke-teal-900/30'}}"
  />
  {{! Progress circle }}
  <circle
    cx="12"
    cy="12"
    r="9"
    fill="none"
    stroke-width="5"
    class="progress-donut-circle {{if (eq this.color 'grey') 'stroke-gray-400' 'stroke-teal-600 dark:stroke-teal-400'}}"
    style={{this.progressStyle}}
    ...attributes
  />
</svg>