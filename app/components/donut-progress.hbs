<svg width="{{or @size 24}}" height="{{or @size 24}}" viewBox="0 0 24 24" class="transform -rotate-90 {{@class}}" ...attributes>
  {{! Base circle (background) }}
  <circle cx="12" cy="12" r="10" fill="none" stroke-width="2" class="stroke-blue-100 dark:stroke-blue-900" />
  {{! Progress circle }}
  <circle
    cx="12"
    cy="12"
    r="10"
    fill="none"
    stroke-width="2"
    stroke-linecap="round"
    class="donut-progress-circle stroke-blue-500"
    data-progress="{{round (mult 100 (max 0.1 (div (or @completed 0) @total)))}}"
    data-target-offset="{{round (sub 62.83 (mult 62.83 (max 0.1 (div (or @completed 0) @total))))}}"
    {{donut-progress}}
  />
</svg>