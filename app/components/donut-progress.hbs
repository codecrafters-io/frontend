<svg width={{this.size}} height={{this.size}} viewBox="0 0 24 24" class="transform -rotate-90 {{@class}}" ...attributes>
  {{! Base circle (background) }}
  <circle
    cx="12"
    cy="12"
    r="10"
    fill="none"
    stroke-width="2"
    class="{{if this.isComplete 'stroke-teal-100 dark:stroke-teal-900' 'stroke-blue-100 dark:stroke-blue-900'}}"
  />
  {{! Progress circle }}
  <circle
    cx="12"
    cy="12"
    r="10"
    fill="none"
    stroke-width="2"
    stroke-linecap="round"
    class="donut-progress-circle {{if this.isComplete 'stroke-teal-500' 'stroke-blue-500'}}"
    style={{html-safe (concat "stroke-dasharray: 62.83 62.83; stroke-dashoffset: " this.targetOffset)}}
  />
</svg>