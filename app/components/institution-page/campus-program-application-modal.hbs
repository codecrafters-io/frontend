<ModalBody @allowManualClose={{true}} @onClose={{@onClose}} class="w-full" data-test-campus-program-application-modal>
  <div class="mb-6 font-semibold text-2xl text-gray-800 dark:text-gray-200 mr-8">
    Campus Program Application
  </div>

  <AnimatedContainer>
    {{#animated-if (eq this.currentStep "enter-email") use=this.transition}}
      <InstitutionPage::CampusProgramApplicationModal::EnterEmailStep
        @institution={{@institution}}
        @onApplicationCreated={{this.handleApplicationCreated}}
      />
    {{else}}
      <div>
        TODO
      </div>
    {{/animated-if}}
  </AnimatedContainer>
</ModalBody>