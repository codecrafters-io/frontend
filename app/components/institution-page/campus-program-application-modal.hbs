<ModalBody @allowManualClose={{true}} @onClose={{@onClose}} class="w-full" data-test-campus-program-application-modal>
  <div class="mb-6 font-semibold text-2xl text-gray-800 dark:text-gray-200 mr-8">
    Campus Program Application
  </div>

  <AnimatedContainer>
    {{!-- {{#animated-if (not this.latestSavedGrantApplication) use=this.transition}}
      <InstitutionPage::CampusProgramApplicationModal::EnterEmailStepContainer @institution={{@institution}} />
    {{else}}{{#if (eq this.latestSavedGrantApplication.status "awaiting_verification")}}
        {{! @glint-expect-error this.latestSavedGrantApplication is nullable}}
        <InstitutionPage::CampusProgramApplicationModal::VerifyEmailStepContainer @application={{this.latestSavedGrantApplication}} />
      {{/if}}{{/animated-if}} --}}
    <div class="flex flex-col items-center gap-8 pt-8" ...attributes data-test-verify-email-step-container>
      {{svg-jar "shield-exclamation" class="w-16 h-16 text-red-600"}}

      <div class="prose prose-sm text-center">
        <p>
          This email address has already been used to apply for the Campus Program.
        </p>
      </div>

      <PrimaryButton @onClick={{(noop)}}>
        Change email
      </PrimaryButton>

      <div class="text-xs text-gray-500">
        Need help?
        <a href="mailto:hello@codecrafters.io" class="underline">hello@codecrafters.io</a>
      </div>
    </div>
  </AnimatedContainer>
</ModalBody>