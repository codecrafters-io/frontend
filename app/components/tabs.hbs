<div ...attributes>
  <ul class="flex items-center gap-2 overflow-x-auto">
    {{#each @tabs as |tab|}}
      <TabHeader
        @icon={{tab.icon}}
        @text={{tab.title}}
        @isActive={{eq this.activeTabSlug tab.slug}}
        @size={{@size}}
        {{on "click" (fn this.handleTabChange tab)}}
      />
    {{/each}}
  </ul>

  <div>
    {{yield this.activeTabSlug}}
  </div>
</div>