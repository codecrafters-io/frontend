<div ...attributes>
  {{#each @steps key="id" as |step stepIndex|}}
    <div class="py-3" data-test-step-list-step>
      <div class="flex items-center gap-3">
        <div class="flex-shrink-0">
          <div class="flex h-7 w-7 items-center justify-center rounded-full bg-gray-100 dark:bg-gray-800">
            <span class="text-xs font-semibold text-gray-800 dark:text-gray-200">{{add stepIndex 1}}</span>
          </div>
        </div>

        <div class="text-gray-800 dark:text-gray-200 font-semibold {{if step.isComplete 'opacity-50' ''}}" data-test-step-title>
          {{step.titleMarkdown}}
        </div>

        {{#if step.isComplete}}
          <div class="flex" data-test-step-complete-icon>
            {{svg-jar "check-circle" class="w-6 h-6 text-teal-500"}}
          </div>
        {{/if}}
      </div>

      <div class={{if @stepContainerClass @stepContainerClass "mt-3 pl-10"}}>
        {{yield (hash step=step)}}
      </div>
    </div>
  {{/each}}
</div>