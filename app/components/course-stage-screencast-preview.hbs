<div class="flex @container" data-test-screencasts-previews role="button" ...attributes>
  <div class="flex gap-4 flex-col items-center overflow-hidden group @xl:flex-row">
    {{! thumbnail }}
    <div class="relative w-full @xl:max-w-[50%] @5xl:max-w-[35%] border border-gray-200 dark:border-white/10">
      <img src={{@screencast.thumbnailUrl}} alt="thumbnail" />
      <div class="absolute inset-0 flex items-center justify-center">
        {{svg-jar "play" class="w-[25%] text-gray-100 opacity-75 group-hover:opacity-100 transition-opacity duration-100"}}
      </div>
    </div>
    {{! details }}
    <div class="w-full">
      <Pill @color="green">{{@screencast.language.name}}</Pill>
      <div class="font-semibold text-gray-800 dark:text-gray-100 text-lg mt-2" data-test-screencasts-previews-title>{{@screencast.title}}</div>
      <div class="flex items-center gap-1 mt-1">
        <img src={{@screencast.sourceIconUrl}} class="h-5" alt="source" />
        <div class="text-gray-600 dark:text-gray-400 text-xs">{{@screencast.authorName}}</div>
      </div>
      <div class="flex gap-3 mt-3">
        <div class="flex items-center">
          {{svg-jar "clock" class="w-4 text-gray-300 dark:text-gray-600 mr-1.5"}}
          <div class="text-gray-600 dark:text-gray-400 text-xs" data-test-screencasts-formatted-duration>{{format-duration
              this.durationInSecondsRoundedToNearestMinute
            }}</div>
          <div class="w-px h-3 bg-gray-200 ml-3"></div>
        </div>
        <div class="flex items-center">
          {{svg-jar "calendar" class="w-4 text-gray-300 dark:text-gray-600 mr-1.5"}}
          <div class="text-gray-600 dark:text-gray-400 text-xs">{{date-from-now @screencast.publishedAt}}</div>
        </div>
      </div>
      <div class="flex items-center mt-6">
        <div class="flex items-center">
          <span class="font-semibold text-xs mr-1 text-gray-500 group-hover:text-teal-500 transition-colors" data-test-action-text>
            View
          </span>

          {{svg-jar "arrow-right" class="w-4 fill-current text-gray-300 group-hover:text-teal-500 transition-colors"}}
        </div>
      </div>
    </div>
  </div>
</div>