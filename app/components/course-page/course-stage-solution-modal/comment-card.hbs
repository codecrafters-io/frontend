<div data-test-comment-card class="w-full" ...attributes>
  {{#if this.isEditing}}
    <CoursePage::CourseStageSolutionModal::CommentForm
      @comment={{@comment}}
      @onCancel={{fn (mut this.isEditing) false}}
      @onSubmit={{fn (mut this.isEditing) false}}
    />
  {{else}}
    <div
      class="flex items-center justify-between
        {{if @comment.parentComment 'py-1' 'bg-gray-100 rounded-t py-2 px-4 border-b border-gray-200 shadow-sm'}}"
    >
      <div class="flex items-center">
        <a
          href={{@comment.user.codecraftersProfileUrl}}
          class="text-sm text-gray-600 font-bold hover:underline"
          target="_blank"
          rel="noopener noreferrer"
        >{{@comment.user.username}}</a>

        {{#if @comment.user.isStaff}}
          <span class="bg-gray-400 text-white ml-1 px-1 py-0.5 rounded font-semibold text-xs">
            staff
          </span>
        {{/if}}

        <div class="bg-gray-300 w-1 h-1 mx-1.5 rounded-full"></div>
        <div class="text-xs text-gray-400">
          {{moment-from-now @comment.createdAt}}
        </div>
      </div>

      <div class="flex items-center">
        {{#if (and this.currentUserIsStaff (not @comment.isApprovedByModerator))}}
          <a
            target="_blank"
            href="/admin/course_stage_comments/{{@comment.id}}/edit"
            class="bg-yellow-500 text-white rounded px-2 py-1 font-bold text-xs"
            rel="noopener noreferrer"
          >
            unapproved
          </a>
        {{/if}}

        {{#if (eq this.currentUser @comment.user)}}
          <div class="ml-2">
            <CoursePage::CourseStageSolutionModal::CommentCard::MoreDropdown
              @comment={{@comment}}
              @onEditButtonClick={{this.handleEditButtonClick}}
              @onDeleteButtonClick={{this.handleDeleteButtonClick}}
            />
          </div>
        {{/if}}
      </div>
    </div>

    <div class="{{if @comment.parentComment 'py-1' 'px-4 py-3'}}">
      <div class="leading-relaxed prose-sm prose max-w-none comment-body" {{did-insert this.handleDidInsertBodyHTML}} data-test-comment-body>
        {{this.bodyHTML}}
      </div>

      <div class="mt-2 flex items-center">
        <CoursePage::CourseStageSolutionModal::CommentCard::UpvoteButton @comment={{@comment}} />
        <CoursePage::CourseStageSolutionModal::CommentCard::DownvoteButton @comment={{@comment}} class="ml-1" />

        {{#unless @comment.parentComment}}
          <CoursePage::CourseStageSolutionModal::CommentCard::ReplyButton class="ml-1" {{on "click" this.handleReplyButtonClick}} />
        {{/unless}}
      </div>
    </div>
  {{/if}}

  {{#if this.sortedChildComments.firstObject}}
    <div class="bg-gray-50 py-2 px-4 border-t border-gray-200 {{if this.shouldShowReplyForm '' 'rounded-b'}}">
      {{#each this.sortedChildComments as |childComment|}}
        <div class="flex items-start">
          <a
            href={{childComment.user.codecraftersProfileUrl}}
            class="mt-0.5 flex items-center flex-shrink-0"
            target="_blank"
            rel="noopener noreferrer"
          >
            <AvatarImage @user={{childComment.user}} class="w-6 h-6 mr-3 filter drop-shadow-sm ring-1 ring-white rounded-full shadow" />
          </a>

          <CoursePage::CourseStageSolutionModal::CommentCard @comment={{childComment}} />
        </div>
      {{/each}}
    </div>
  {{/if}}

  {{#if this.shouldShowReplyForm}}
    <CoursePage::CourseStageSolutionModal::CommentForm
      @parentComment={{@comment}}
      @onCancel={{this.handleCancelReplyButtonClick}}
      @onSubmit={{this.handleReplySubmitted}}
      class="border-t"
    />
  {{/if}}
</div>