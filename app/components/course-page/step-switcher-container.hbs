<div class="inline-flex rounded items-stretch shadow-xs select-none" ...attributes>
  {{#if this.previousStep}}
    <LinkTo
      @route={{this.previousStep.routeParams.route}}
      @models={{this.previousStep.routeParams.models}}
      @replace={{true}}
      class="rounded-l border-r-0 flex items-center border border-gray-300 dark:border-gray-700 transition-colors duration-75 pl-1 pr-2 py-2 text-gray-500 bg-white dark:bg-gray-850 hover:bg-gray-50 dark:hover:bg-gray-700/60"
      data-test-previous-stage-button
    >
      {{svg-jar "chevron-left" class="w-4 fill-current"}}
      <span class="text-xs">back</span>
    </LinkTo>
  {{else}}
    <div
      class="rounded-l border-r-0 flex items-center border border-gray-300 dark:border-gray-700 transition-colors duration-75 pl-1 pr-2 py-2 text-gray-500 bg-white dark:bg-gray-850 cursor-not-allowed opacity-30"
      data-test-previous-stage-button
    >
      {{svg-jar "chevron-left" class="w-4 fill-current"}}
      <span class="text-xs">back</span>
    </div>
  {{/if}}

  <div class="w-px bg-gray-300 dark:bg-gray-700"></div>

  {{#if this.nextStep}}
    <LinkTo
      @route={{this.nextStep.routeParams.route}}
      @models={{this.nextStep.routeParams.models}}
      @replace={{true}}
      class="rounded-r border-l-0 flex items-center border border-gray-300 dark:border-gray-700 transition-colors duration-75 pr-1 pl-2 py-1.5 text-gray-500 bg-white dark:bg-gray-850 hover:bg-gray-50 dark:hover:bg-gray-700/60"
      data-test-next-stage-button
    >
      <span class="text-xs">next</span>
      {{svg-jar "chevron-right" class="w-4 fill-current"}}
    </LinkTo>
  {{else}}
    <div
      class="rounded-r border-l-0 flex items-center border border-gray-300 dark:border-gray-700 transition-colors duration-75 pr-1 pl-2 py-1.5 text-gray-500 bg-white dark:bg-gray-850 cursor-not-allowed opacity-30"
      data-test-next-stage-button
    >
      <span class="text-xs">next</span>
      {{svg-jar "chevron-right" class="w-4 fill-current"}}
    </div>
  {{/if}}
</div>