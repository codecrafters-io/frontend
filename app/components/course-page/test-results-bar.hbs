<div
  class="group/test-results-bar bg-gray-900 border-t border-gray-800 py-3 flex flex-col gap-3 {{if this.isCollapsed 'hover:bg-black'}}"
  {{on "click" (if this.isCollapsed this.handleCollapsedBarClick (noop))}}
  role={{if this.isCollapsed "button"}}
  ...attributes
>
  {{#if this.isExpanded}}
    <div class="flex items-center justify-end">
      <div class="flex items-center justify-center text-gray-500 hover:text-gray-400" {{on "click" this.handleCollapseButtonClick}} role="button">
        {{svg-jar "x-circle" class="w-4 h-4 fill-current"}}
      </div>
    </div>

    <div class="py-16 border-b border-gray-800 flex items-center justify-center">
      <div class="text-gray-500 text-sm">
        When you run tests on your code, you'll see logs here.
      </div>
    </div>
  {{/if}}

  <div class="flex items-center justify-between">
    <div class="inline-flex items-center text-xs font-semibold text-gray-500">
      <span class="font-normal text-gray-400 mr-1">
        Active Stage:
      </span>

      {{#if (eq @activeStep.type "CourseStageStep")}}
        {{#each this.activeStepAsCourseStageStep.breadcrumbs as |breadcrumb index|}}
          {{#if (eq index 0)}}
            {{breadcrumb}}
          {{else}}
            <span class="text-gray-300 px-2 inline-flex">&gt;</span>
            {{breadcrumb}}
          {{/if}}
        {{/each}}
      {{else}}
        <span class="text-gray-500">{{@activeStep.title}}</span>
      {{/if}}
    </div>

    <div class="text-xs text-gray-600 font-semibold inline-flex items-center gap-1">
      {{svg-jar "chevron-double-up" class="w-3 h-3"}}
      <span class="hidden">
        Expand
      </span>
    </div>

    <CoursePage::StepProgressIndicator @step={{@activeStep}} />
  </div>
</div>