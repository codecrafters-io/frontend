<BasicDropdown @horizontalPosition="right" as |dd|>
  <dd.Trigger>
    <div class="text-gray-400 dark:text-gray-500" data-test-more-dropdown-toggle ...attributes>
      {{svg-jar "dots-horizontal" class=(concat "fill-current w-5 transform transition-all " (if dd.isOpen "text-teal-500" ""))}}
    </div>
  </dd.Trigger>
  <dd.Content>
    <div class="py-2 border dark:border-white/10 rounded shadow bg-white dark:bg-gray-850" data-test-more-dropdown-content>
      {{#if (eq @diffSource "highlighted-files")}}
        <DropdownLink @text="View full diff" @icon="switch-horizontal" {{on "click" (fn this.handleViewFullDiffLinkClick dd.actions)}} />
      {{else}}
        <DropdownLink
          @text="View highlighted files"
          @icon="switch-horizontal"
          {{on "click" (fn this.handleViewHighlightedFilesLinkClick dd.actions)}}
        />
      {{/if}}
    </div>
  </dd.Content>
</BasicDropdown>