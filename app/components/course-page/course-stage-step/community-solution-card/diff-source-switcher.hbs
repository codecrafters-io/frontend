<button
  type="button"
  class="flex items-stretch border border-gray-300 dark:border-white/10 rounded"
  {{on "click" this.handleClick}}
  ...attributes
  data-test-diff-source-switcher
>
  <div
    class="w-6 h-6 flex items-center justify-center rounded-l {{if (not-eq @diffSource 'highlighted-files') 'opacity-50'}}"
    data-test-highlighted-files-icon
  >
    {{svg-jar
      "code"
      class=(concat "w-3 h-3 " (if (eq @diffSource "highlighted-files") "text-gray-700 dark:text-gray-300" "text-gray-400 dark:text-gray-500"))
    }}
  </div>
  <div class="w-px bg-gray-200 dark:bg-white/5"></div>
  <div
    class="w-6 h-6 flex items-center justify-center rounded-r {{if (not-eq @diffSource 'changed-files') 'opacity-50'}}"
    data-test-changed-files-icon
  >
    <span class="{{if (eq @diffSource 'changed-files') 'text-gray-700 dark:text-gray-300' 'text-gray-400 dark:text-gray-500'}}">Â±</span>
  </div>
  <EmberTooltip
    @text={{if
      (eq @diffSource "changed-files")
      "You're currently viewing a diff for this solution. Click to toggle between viewing code vs. diff"
      "You're currently viewing the code for this solution. Click to toggle between viewing code vs. diff"
    }}
  />
</button>