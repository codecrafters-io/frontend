<div
  class="bg-white dark:bg-gray-850 shadow-sm rounded border border-gray-300 dark:border-white/10"
  data-test-community-solution-highlighted-file-card
  ...attributes
>
  <div
    class="bg-gray-100 dark:bg-gray-800 rounded-t py-2 px-4 border-b border-gray-200 dark:border-white/5 shadow-sm flex items-center justify-between sticky top-10 z-10"
  >
    <span class="font-mono text-xs text-gray-600 dark:text-gray-300 bold">{{@highlightedFile.filename}}</span>
    <div>
      {{#if @solution.isPublishedToPublicGithubRepository}}
        <a
          {{! @glint-expect-error call not ts-ified yet }}
          href={{call (fn @solution.githubUrlForFile @highlightedFile.filename)}}
          target="_blank"
          rel="noopener noreferrer"
          class="flex gap-x-1 items-center group"
        >
          <span class="text-[10px] text-gray-700 dark:text-gray-300 group-hover:underline">
            View on GitHub
          </span>
          {{svg-jar "github" class="w-3.5 h-3.5 text-gray-600 dark:text-gray-400"}}
        </a>
      {{else}}
        <button
          type="button"
          {{on "click" this.handleViewOnGithubClick}}
          class="flex gap-x-1 items-center group"
          data-test-view-on-github-button
          disabled={{this.isCreatingExport}}
        >
          {{#if this.isCreatingExport}}
            <span class="text-[10px] text-gray-700 dark:text-gray-300">
              Creating export...
            </span>
            <div class="w-3.5 h-3.5 border-2 border-gray-400 border-t-transparent rounded-full animate-spin"></div>
          {{else}}
            <span class="text-[10px] text-gray-700 dark:text-gray-300 group-hover:underline">
              View on GitHub
            </span>
            {{svg-jar "github" class="w-3.5 h-3.5 text-gray-600 dark:text-gray-400"}}
          {{/if}}
        </button>
      {{/if}}

      {{#if this.shouldShowPublishToGithubButton}}
        <button
          type="button"
          {{on "click" @onPublishToGithubButtonClick}}
          class="flex gap-x-1 items-center group ml-2"
          data-test-publish-to-github-button
        >
          <span class="text-[10px] text-gray-700 dark:text-gray-300 group-hover:underline">
            Publish to GitHub
          </span>
          {{svg-jar "github" class="w-3.5 h-3.5 text-gray-600 dark:text-gray-400"}}
        </button>
      {{/if}}
    </div>
  </div>

  <CodeMirror
    @allowMultipleSelections={{true}}
    @bracketMatching={{true}}
    @collapsedRanges={{this.collapsedRangesForCodeMirror}}
    @crosshairCursor={{true}}
    @document={{@highlightedFile.contents}}
    @drawSelection={{true}}
    @editable={{false}}
    @filename={{@highlightedFile.filename}}
    @highlightActiveLine={{false}}
    @highlightedRanges={{this.highlightedRangesForCodeMirror}}
    @highlightSelectionMatches={{true}}
    @highlightSpecialChars={{true}}
    @highlightTrailingWhitespace={{false}}
    @language={{@solution.language.slug}}
    @lineNumbers={{true}}
    @readOnly={{true}}
    @rectangularSelection={{true}}
    @theme={{this.codeMirrorTheme}}
  />
</div>