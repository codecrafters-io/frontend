<div
  class="flex justify-between items-center py-2 px-3 hover:bg-gray-50 dark:hover:bg-gray-700/50 group cursor-pointer"
  role="button"
  data-test-repository-link
  ...attributes
>
  <div>
    <div class="flex items-center">
      <span class="text-gray-700 dark:text-gray-300 text-sm">{{@repository.name}}</span>

      <div class="text-gray-400 dark:text-gray-500 text-xs ml-1">
        {{#if @repository.lastSubmissionAt}}
          (pushed
          {{date-from-now @repository.lastSubmissionAt}})
        {{else}}
          (not pushed yet)
        {{/if}}
      </div>
    </div>

    <div class="text-gray-400 dark:text-gray-500 text-xs mt-1">
      {{@repository.completedStages.length}}
      /
      {{@repository.course.stages.length}}
      stages
    </div>
  </div>

  <div class="text-gray-400 dark:text-gray-500 text-xs ml-6">
    <img src={{@repository.language.grayLogoUrl}} alt={{@repository.language.name}} class="opacity-75 w-6 h-6 block group-hover:hidden shrink-0" />

    <img src={{@repository.language.tealLogoUrl}} alt={{@repository.language.name}} class="w-6 h-6 hidden group-hover:block shrink-0" />
  </div>
</div>