<ModalBody @isWide={{true}} @allowManualClose={{true}} @onClose={{@onClose}} class="w-full" data-test-configure-extensions-modal>
  <div class="mb-6 font-semibold text-2xl text-gray-800 dark:text-gray-50 mr-8">
    Configure Extensions
  </div>

  <AlertWithIcon class="mb-4">
    Extensions are sets of additional stages that can be added to your repository. You can add &amp; remove extensions at any time.
  </AlertWithIcon>

  <div class="grid grid-cols-1">
    {{#if this.enabledExtensions.length}}
      <AnimatedContainer>
        <div {{sortable-group onChange=this.handleSortableItemsReordered}}>
          {{#animated-each this.enabledExtensions key="id" use=this.extensionTransition duration=400 as |extension|}}
            <div {{sortable-item model=extension}} data-test-sortable-extension-card data-test-sortable-extension-id={{extension.id}} class="mb-4">
              {{! @glint-ignore: animated-each doesn't preserve exact types, but extension is always CourseExtensionModel at runtime }}
              <CoursePage::ConfigureExtensionsModal::ExtensionCard
                @extension={{extension}}
                @repository={{@repository}}
                @onToggle={{this.handleExtensionToggle}}
              />
            </div>
          {{/animated-each}}
        </div>
      </AnimatedContainer>
    {{/if}}

    <AnimatedContainer>
      {{#animated-each this.disabledExtensions key="id" use=this.extensionTransition duration=400 as |extension|}}
        <div class="mb-4">
          <CoursePage::ConfigureExtensionsModal::ExtensionCard
            {{! @glint-ignore: animated-each doesn't preserve exact types, but extension is always CourseExtensionModel at runtime }}
            @extension={{extension}}
            @repository={{@repository}}
            @onToggle={{this.handleExtensionToggle}}
          />
        </div>
      {{/animated-each}}
    </AnimatedContainer>
  </div>

  <div class="border-b border-gray-200 dark:border-white/5 pb-1 mb-6 flex items-center gap-2">
    <h1 class="text-2xl text-gray-800 dark:text-gray-50 font-bold tracking-tighter">Vote on future extensions</h1>

    <div>
      {{svg-jar "information-circle" class="w-4 h-4 fill-current text-gray-300 dark:text-gray-700 hover:text-gray-400 dark:hover:text-gray-600"}}
      <EmberTooltip @text={{"These are ideas for extensions we'll build in the future. Vote to let us know which ones you're interested in!"}} />
    </div>
  </div>

  <div class="grid grid-cols-1 gap-3 mb-8">
    <RoadmapPage::SubmitCourseExtensionIdeaCard @course={{@repository.course}} />

    {{#each this.orderedCourseExtensionIdeas as |courseExtensionIdea|}}
      <RoadmapPage::CourseExtensionIdeaCard @courseExtensionIdea={{courseExtensionIdea}} />
    {{/each}}
  </div>
</ModalBody>