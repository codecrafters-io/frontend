<div
  class="group bg-white dark:bg-gray-850 p-5 rounded-md shadow-xs flex flex-col border
    {{if this.optimisticValueForIsActivated 'border-gray-300 dark:border-gray-700/60' 'border-gray-200 dark:border-white/5'}}
    relative"
  ...attributes
  data-test-course-extension-card
>
  <div class="flex items-start justify-between mb-3">
    <div class="flex items-center flex-wrap gap-2 mr-2">
      {{#if this.optimisticValueForIsActivated}}
        <div class="text-gray-400 text-xl cursor-grab flex items-center h-7" {{sortable-handle}} data-test-sortable-item-drag-handle>
          {{svg-jar "menu" class="w-4 h-4"}}
        </div>
      {{/if}}
      <div
        class="{{if this.optimisticValueForIsActivated 'text-teal-600 dark:text-teal-500' 'text-gray-800 dark:text-gray-50'}}
          font-bold text-xl tracking-tight h-7 flex items-center"
        data-test-course-extension-name
      >
        {{@extension.name}}
      </div>
      {{#if (eq this.progressPillType "completed")}}
        <Pill @color="green" data-test-extension-progress-pill>Completed</Pill>
      {{else if (eq this.progressPillType "in_progress")}}
        <Pill @color="yellow" data-test-extension-progress-pill>In Progress</Pill>
      {{/if}}
    </div>
    <div>
      <Toggle @isOn={{this.optimisticValueForIsActivated}} {{on "click" this.handleClick}} data-test-toggle-extension-button />
    </div>
  </div>
  {{! Text }}
  <div class="prose dark:prose-invert prose-sm">
    {{markdown-to-html @extension.descriptionMarkdown}}
  </div>
</div>