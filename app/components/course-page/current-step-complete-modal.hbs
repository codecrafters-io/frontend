<ModalBody @allowManualClose={{false}} @onClose={{@onClose}} data-test-current-step-complete-modal ...attributes>
  <div class="flex flex-col items-center w-full">
    <div class="text-[60px]">
      ðŸŽ‰
    </div>

    <div class="mb-1 font-bold text-2xl text-gray-700 dark:text-gray-100">
      {{if (eq this.currentStep.type "CourseStageStep") "Stage Completed!" "Step Completed!"}}
    </div>

    <div class="prose dark:prose-invert mb-5">
      <p>
        {{this.currentStep.completionNoticeMessage}}
      </p>
    </div>

    <PrimaryLinkButton
      @route={{@activeStep.routeParams.route}}
      @models={{@activeStep.routeParams.models}}
      @size="large"
      data-test-next-or-active-step-button
      class="flex-shrink-0 w-full"
    >
      <div class="flex items-center justify-center">
        {{#if (eq this.nextStep @activeStep)}}
          {{#if (eq this.nextStep.type "CourseStageStep")}}
            <span>View next stage</span>
          {{else}}
            <span>View next step</span>
          {{/if}}
        {{else}}
          <span>Back to current {{if (eq @activeStep.type "CourseStageStep") "stage" "step"}}</span>
        {{/if}}

        {{svg-jar "arrow-right" class="w-4 ml-1 fill-current flex-shrink-0"}}
      </div>
    </PrimaryLinkButton>

    <div
      class="mt-3 text-gray-500 hover:text-gray-800 dark:text-gray-300 text-sm pb-0.25 border-b border-gray-400 dark:border-gray-500 hover:border-gray-600 dark:hover:border-gray-400 flex-shrink-0"
      role="button"
      {{on "click" @onClose}}
      data-test-stay-on-current-step-button
    >
      Show instructions again
    </div>
  </div>
</ModalBody>