<div class="flex items-center justify-between">
  <div class="inline-flex items-center text-xs font-semibold text-gray-500">
    <span class="font-normal text-gray-400 mr-1">
      Active Stage:
    </span>

    {{#if (eq @activeStep.type "CourseStageStep")}}
      {{#each this.activeStepAsCourseStageStep.breadcrumbs as |breadcrumb index|}}
        {{#if (eq index 0)}}
          {{breadcrumb}}
        {{else}}
          <span class="text-gray-300 px-2 inline-flex">&gt;</span>
          {{breadcrumb}}
        {{/if}}
      {{/each}}
    {{else}}
      <span class="text-gray-500">{{@activeStep.title}}</span>
    {{/if}}
  </div>

  {{#if this.barIsCollapsed}}
    <div
      class="text-gray-600 font-semibold inline-flex items-center transform group-hover/test-results-bar:translate-y-[-3px] group-hover/test-results-bar:text-gray-400 transition-all"
    >
      {{svg-jar "chevron-double-up" class="w-3 h-3 fill-current"}}
    </div>
  {{/if}}

  <CoursePage::StepProgressIndicator @step={{@activeStep}} />
</div>