<div class="flex items-center justify-between" ...attributes>
  <ul class="flex items-center gap-2 overflow-x-auto">
    {{#each this.tabs as |tab|}}
      <TabHeader
        @size="small"
        @icon={{tab.icon}}
        @text={{tab.title}}
        @isActive={{eq tab.slug @activeTabSlug}}
        {{on "click" (fn this.handleTabClick tab)}}
      />
    {{/each}}
  </ul>
  <div class="flex items-center justify-center text-gray-500 hover:text-gray-400" {{on "click" @onCollapseButtonClick}} role="button">
    {{svg-jar "x" class="w-5 h-5 fill-current"}}
  </div>
</div>