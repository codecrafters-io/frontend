<div
  class="p-1.5 rounded-full text-gray-600 flex items-center transform
    {{if
      @barIsExpanded
      'group-hover/test-results-bar-bottom-section:translate-y-[2px]'
      'group-hover/test-results-bar-bottom-section:translate-y-[-2px]'
    }}
    group-hover/test-results-bar-bottom-section:text-white transition-all group-hover/test-results-bar-bottom-section:bg-teal-400 bg-teal-400/0"
>
  {{#if @barIsExpanded}}
    {{svg-jar "chevron-double-down" class="w-3 h-3 fill-current"}}
  {{else}}
    {{svg-jar "chevron-double-up" class="w-3 h-3 fill-current"}}
  {{/if}}
</div>