<div ...attributes>
  <ul class="flex items-center gap-2 overflow-x-auto mt-3 mb-3">
    {{#each this.tabs as |tab|}}
      <TabHeader
        @size="small"
        @icon={{tab.icon}}
        @text={{tab.title}}
        @isActive={{eq tab.slug @activeTabSlug}}
        {{on "click" (fn this.handleTabClick tab)}}
      />
    {{/each}}
  </ul>

  {{yield}}
</div>