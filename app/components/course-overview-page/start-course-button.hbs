<PrimaryLinkButton @route="course" @model={{@course.slug}} @size={{or @size "large"}} data-test-start-course-button>
  <div class="flex items-center">
    {{#if this.currentUserIsAnonymous}}
      {{svg-jar "github" class="fill-current w-5 transform transition-all mr-2"}}
    {{/if}}

    {{#if this.currentUserHasStartedCourse}}
      Resume Building
    {{else}}
      Start Building
    {{/if}}

    {{svg-jar "arrow-right" class="w-4 ml-2 fill-current"}}
  </div>
</PrimaryLinkButton>