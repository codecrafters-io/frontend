<a href={{@testimonial.link}} class="block py-4 group" target="_blank" rel="noopener noreferrer">
  <span class="flex">
    <span class="flex flex-col items-center mr-3 px-1">
      <span class="w-px bg-gray-200 dark:bg-white/5 group-hover:bg-gray-300 dark:group-hover:bg-gray-700/60 grow mb-2 transition-colors">
      </span>
      <span class="text-4xl text-indigo-400 dark:text-indigo-600 leading-none font-bold h-5">
        &ldquo;
      </span>
      <span class="w-px bg-gray-200 dark:bg-white/5 group-hover:bg-gray-300 dark:group-hover:bg-gray-700/60 grow mb-2 transition-colors">
      </span>
    </span>
    <span class="grow flex flex-col">
      <span class="prose prose-sm dark:prose-invert mb-2 leading-relaxed grow">
        {{@testimonial.text}}
      </span>
    </span>
  </span>
  <span class="flex items-start">
    <img alt="avatar" src={{@testimonial.author_avatar}} class="w-6 h-6 filter drop-shadow-xs ring-1 ring-white rounded-full shadow-sm mr-3" />
    <span class="block mt-0.5">
      <span class="block text-gray-700 dark:text-gray-300 group-hover:underline text-sm transition-colors font-bold mb-0.5">
        {{@testimonial.author_name}}
      </span>
      <span class="block text-gray-600 dark:text-gray-400 text-xs">
        {{@testimonial.author_description}}
      </span>
    </span>
  </span>
</a>