{{!
  Add content you wish automatically added to the documents head
  here. The 'model' available in this template can be populated by
  setting values on the 'head-data' service.
}}

{{! @glint-nocheck: head.hbs is a special ember-cli-head template that cannot be typed via a route }}

{{! template-lint-disable no-forbidden-elements }}

<meta name="description" content={{or @model.metaData.description @model.defaults.description}} />

<meta property="og:type" content={{or @model.metaData.type @model.defaults.type}} />
<meta property="og:site_name" content={{or @model.metaData.siteName @model.defaults.siteName}} />
<meta property="og:title" content={{or @model.metaData.title @model.defaults.title}} />
<meta property="og:description" content={{or @model.metaData.description @model.defaults.description}} />
<meta property="og:image" content={{or @model.metaData.imageUrl @model.defaults.imageUrl}} />

<meta name="twitter:card" content={{or @model.metaData.twitterCard @model.defaults.twitterCard}} />
<meta name="twitter:site" content={{or @model.metaData.twitterSite @model.defaults.twitterSite}} />
<meta name="twitter:title" content={{or @model.metaData.title @model.defaults.title}} />
<meta name="twitter:description" content={{or @model.metaData.description @model.defaults.description}} />
<meta name="twitter:image" content={{or @model.metaData.imageUrl @model.defaults.imageUrl}} />

{{#if @model.metaData.shouldRenderNoIndexTag}}
  <meta name="robots" content="noindex" />
{{/if}}