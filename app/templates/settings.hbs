{{page-title "Settings"}}

<div class="container mx-auto lg:max-w-screen-lg pt-10 pb-48 px-4 md:px-6">
  <div class="font-semibold text-xl text-gray-700 dark:text-gray-100 mb-4">Settings</div>

  <ul class="flex items-center gap-2 overflow-x-auto pb-4 md:pb-6">
    {{#each this.tabs as |tab|}}
      <LinkTo @route={{tab.route}}>
        <TabHeader @text={{tab.label}} @isActive={{eq this.activeTab.label tab.label}} />
      </LinkTo>
    {{/each}}
  </ul>

  <div class="bg-white dark:bg-gray-850 rounded-md p-4 md:p-6 border dark:border-white/5">
    {{outlet}}
  </div>
</div>