{{page-title "Courses"}}

{{#if this.isDevelopmentOrTest}}
  <div class="relative">
    <FakeDataToolbar @repository={{this.activeRepository}} class="hidden" />
  </div>
{{/if}}

<div class="container mx-auto lg:max-w-screen-lg pt-6 md:pt-10 pb-10 md:pb-48 px-3 md:px-6">
  <CoursePage::Header
    @course={{this.course}}
    @repositories={{this.model.repositories}}
    @activeRepository={{this.activeRepository}} />

  <CoursePage::Content
    @course={{this.course}}
    @repositories={{this.model.repositories}}
    @activeRepository={{this.activeRepository}}
    @onRepositoryCreate={{this.handleRepositoryCreate}} />
</div>