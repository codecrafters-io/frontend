{{page-title "Manage Membership"}}

<div class="container mx-auto lg:max-w-screen-lg pt-10 pb-48 px-3 md:px-6">
  <div class="font-semibold text-2xl text-gray-700 mb-6 flex-shrink-0">Manage Membership</div>

  <div class="flex gap-4 items-start flex-col lg:flex-row">
    <div class="w-full lg:w-2/3 space-y-4">
      <MembershipPage::MembershipPlanSection @subscription={{this.activeOrExpiredSubscription}} />
      <MembershipPage::RecentPaymentsSection />
      <MembershipPage::UpcomingPaymentSection @subscription={{this.activeOrExpiredSubscription}} />

      {{!--
            <MembershipPage::PaymentMethodSection @subscription={{this.activeSubscription}} />
            <MembershipPage::UpcomingPaymentSection @subscription={{this.activeSubscription}} />
      --}}

    </div>

    <MembershipPage::ActionsSection
      @subscription={{this.activeOrExpiredSubscription}}
      @onCancelSubscriptionButtonClick={{this.handleCancelSubscriptionButtonClick}}
      class="w-full lg:w-1/3"
    />
  </div>
</div>