{{page-title "Catalog"}}

<div class="container mx-auto lg:max-w-screen-lg pt-6 md:pt-10 pb-10 md:pb-48 px-3 md:px-6" data-test-loading>
  <div class="border-b border-gray-200 pb-2 mb-6">
    <h1 class="text-3xl text-gray-700 font-bold tracking-tighter">Challenges</h1>
  </div>

  <div class="grid grid-cols-1 gap-3 md:grid-cols-2 lg:grid-cols-2 mb-8">
    {{#each (repeat 6)}}
      {{! @glint-expect-error }}
      <CourseCard />
    {{/each}}
  </div>

  <div class="border-b border-gray-200 pb-2 mb-6">
    <h1 class="text-3xl text-gray-700 font-bold tracking-tighter">Language Tracks</h1>
  </div>

  <div class="grid grid-cols-1 gap-3 md:grid-cols-2 lg:grid-cols-3 mb-8">
    {{#each (repeat 6)}}
      {{! @glint-expect-error }}
      <CourseCard />
    {{/each}}
  </div>
</div>